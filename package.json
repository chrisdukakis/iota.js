{
    "name": "iota-js", 
    "version": "1.0.0-alpha.1",
    "description": "IOTA Client Reference Implementation",
    "scripts": {
        "init": "npm i && lerna bootstrap",
        "test": "lerna exec -- npm test",
        "test-ci": "lerna bootstrap && lerna exec -- npm run test-ci && npm run lint",
        "test:staged": "node scripts/test-staged.js",
        "precommit": "lint-staged",
        "docs": "lerna run docs && jsdoc2md --no-cache --plugin dmd-clear --files './packages/*/out/**/*.js' > api_reference.md",
        "lint:src": "tslint -c ./tslint.json './packages/*/src/**/*.ts'",
        "lint:test": "tslint -c ./tslint.json './packages/*/test/**/*.ts'",
        "lint": "npm-run-all --parallel lint:*",
        "lint-staged": "tslint --fix",
        "format": "prettier . --write",
        "format-staged": "prettier --write"
    },
    "contributors": [
        "Dominik Schiener <dom@iota.org> (https://iota.org)",
        "Edward Greve <edward@iota.org> (https://github.com/anyong)",
        "Chris Dukakis <chris.dukakis@iota.org> (https://github.com/chrisdukakis)"
    ],
    "ava": {
        "files": ["packages/**/out/**/test/*.test.js", "packages/**/out/**/test/integration/*.test.js"],
        "failFast": true,
        "failWithoutAssertions": false,
        "compileEnhancements": false,
        "verbose": true
    },
    "lint-staged": {
        "*.{ts}": [
            "./scripts/check-partially-staged.sh lint-staged"
        ],
        "*.{js,ts,json,md}": [
            "./scripts/check-partially-staged.sh format-staged"
        ]
    },
    "keywords": ["iota", "tangle", "library", "javascript", "nodejs", "API"],
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/iotaledger/iota.lib.js/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/iotaledger/iota.lib.js.git"
    },
    "dependencies": {
        "@types/bluebird": "^3.5.20"
    },
    "devDependencies": {
        "ava": "^0.25.0",
        "dmd-clear": "^0.1.2",
        "husky": "^0.14.3",
        "jsdoc-babel": "^0.4.0",
        "lerna": "^2.11.0",
        "lint-staged": "^7.2.0",
        "npm-run-all": "^4.1.3",
        "nyc": "^12.0.2",
        "prettier": "^1.10.2",
        "staged-git-files": "^1.1.1",
        "tslint": "^5.9.1",
        "tslint-config-prettier": "^1.6.0",
        "typescript": "^2.7.0"
    }
}
